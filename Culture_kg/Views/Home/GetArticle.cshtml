@model Article
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <title>Культурно-просветительский портал</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>

    <div class="jumbotron text-center">
        <h1>Опубликованые статьи</h1>
        <p>Данные статьи не является авторскими я просто их скопировал с интернета или сам придумал</p>
    </div>

    <p>
        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(model => model.shortDesc)
            </dd>

            <dd>
                @Html.DisplayFor(model => model.longDesc)
            </dd>

            <dd>
                @Html.HiddenFor(model => model.ArticleID)
            </dd>

            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>

            <dd>
                @Html.DisplayFor(model => model.img)
            </dd>
        </dl>
    </p>


</body>
</html>

